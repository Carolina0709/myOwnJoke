<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Joke</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body class="bg-black">
    <main class="container d-flex flex-column justify-content-center align-items-center h-100">
        <h1 class="display-1 text-warning"> Find a Joke</h1>
        <form action="/" method="POST" class="container w-100 pt-3" style="max-width: 750px;" id="form">
            <fieldset class="border border-warning bg-black rounded p-3 mb-3 text-white"> 

                <div class="d-flex gap-3 gap-md-5 flex-wrap">
                    <h3>Categories:</h3>
                    <div class="form-check d-flex align-items-center gap-2">
                        <input class="form-check-input bg-black border-warning" type="checkbox" value="<% categories[0] %>" id="categoryAny" name="category" checked>
                        <label class="form-check-label" for="categoryAny">Any</label>
                    </div>
                    <div class="form-check d-flex align-items-center gap-2" aria-expanded="false" aria-controls="collapseExample">
                        <input class="form-check-input bg-black border-warning" type="checkbox" id="allCategories">
                        <label class="form-check-label" for="allCategories">Custom</label>
                    </div>
                </div>
                <div class="collapse" id="showCategories">
                    <div class="d-flex flex-wrap m-2 mt-5 gap-5 border p-3">
                        <% categories.slice(1).forEach(category => { %>
                            <div class="form-check">
                                <input class="form-check-input bg-black border-warning"
                                    type="checkbox"
                                    value="<%= category %>"
                                    id="<%= category %>"
                                    name="category">
                                <label class="form-check-label" for="<%= category %>"><%= category %></label>
                            </div>
                        <% }); %>

                    </div>
                </div>
            </fieldset>

            <div class="form-floating mb-3">
                <select class="form-select bg-black text-white  border-warning" id="lang" name="lang">
                    <option selected disabled>Choose a language</option>
                    <% locals.languages.forEach(language => { %>
                        <option value="<%= language.code  %>"><%= language.name  %></option>
                    <% }); %>
                </select>
                <label for="lang" class="text-warning">Language</label>
            </div>
            
            <div class="w-100 d-flex justify-content-end">
                <button type="submit" class="btn btn-warning text-white" id="btn-submit" >Submit</button>
            </div>
        </form>
        <div class="d-flex w-100" style="max-width: 750px;">
            <% if (locals.joke) { %>
                <img src="/images/on.png" style="max-width: 100px;" id="bulb">
                <div class="d-flex align-items-center">
                    <div class="card card-body bg-black text-white border border-warning" id="showJoke">
                        <% if (joke.type === "single") { %>
                            <%= joke.joke %>
                        <% } else { %>
                            <%= joke.setup %>
                            <%= joke.delivery %>
                        <% } %>
                    </div>
                </div>
            <% } else {%>
                <img src="/images/off.png" style="max-width: 100px;" id="bulb">
            <% } %>
            <% if (locals.error) { %>
                <img src="/images/off.png" style="max-width: 100px;" id="bulb">
                <div class="d-flex align-items-center">
                    <div class="card card-body bg-warning text-white" id="showJoke">
                        <%= error %>
                    </div>
                </div>
            <% } %>
            
        </div>
    </main>
    <script src="/js/index.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>